<?xml version="1.0" encoding="UTF-8"?>
<config>
    <projectMetadata>
        <uriBase>http://syriaca.org/manuscript/</uriBase>
        <shelfMarkPrefix>BL Add MS</shelfMarkPrefix>
        <country>United Kingdom</country>
        <settlement>London</settlement>
        <repository>British Library</repository>
        <collection>Oriental Manuscripts</collection>
        <editorsFileUri>https://syriaca.org/documentation/editors.xml</editorsFileUri>
    </projectMetadata>
    <processingInstructions>
        <processingInstruction>
            <name>oxygen</name>
            <parameter>
                <name>RNGSchema</name>
                <value>http://syriaca.org/documentation/syriaca-tei-main.rnc</value>
            </parameter>
            <parameter>
                <name>type</name>
                <value>compact</value>
            </parameter>
        </processingInstruction>
        <processingInstruction>
            <name>xml-stylesheet</name>
            <parameter>
                <name>type</name>
                <value>text/css</value>
            </parameter>
            <parameter>
                <name>href</name>
                <value>https://raw.githubusercontent.com/srophe/wright-catalogue/master/parameters/tei.css</value>
            </parameter>
        </processingInstruction>
    </processingInstructions>
</config>
