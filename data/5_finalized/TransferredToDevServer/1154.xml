                <rubric xml:lang="syr">ܟ̈ܐܦܐ</rubric>
              </msItem>
              <msItem xml:id="b6" n="7">
                <title xml:lang="en">Recipes for various preparations.</title>
              </msItem>
            </msItem>
            <msItem xml:id="a2" n="8">
              <locus from="5b">Fol. 5b</locus>
              <locus from="8b">8b</locus>
              <locus from="11a">11a</locus>
              <locus from="35b">35b</locus>
              <title xml:lang="en">
                <persName>Democritus</persName>.</title>
              <quote xml:lang="syr"> ܡܢ ܡܠܦܢܘܬܐ ܕܕܝܡܩܪܛܝܣ ܚܟܝܡܐ ܩ܏ܕܡ ܡܢ ܡܐܡܪܐ ܏ܩܕܡ<locus from="5b"/>
              </quote>
              <quote xml:lang="syr">ܡܐܡܪܐ ܏ܕܓ<locus from="11a"/>
              </quote>
            </msItem>
            <msItem xml:id="a3" n="9">
              <title xml:lang="en">
                <persName ref="http://syriaca.org/person/2262">Diogenes</persName>.</title>
              <quote xml:lang="syr">ܕܝܘܓܢܝܣ<locus from="9b"/>
              </quote>
            </msItem>
            <msItem xml:id="a4" n="10">
              <title xml:lang="en">
                <persName ref="http://syriaca.org/person/">Hippocrates</persName>.</title>
              <quote xml:lang="syr">ܡܐܡ̣ܪܐ ܏ܕܕ ܕܐܝܦܘܩܪܛܝܣ<locus from="14b"/>
<locus from="38a"/></quote>
              <quote xml:lang="syr">ܣܒܐ ܐܩܘܠܘܣ<locus from="10a"/>
              </quote>
              <quote xml:lang="syr">ܦܝܒܝܟܘܣ <locus from="44a"/>
              </quote>
            </msItem>
