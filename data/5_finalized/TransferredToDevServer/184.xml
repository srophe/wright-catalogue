            <physDesc>
              <objectDesc form="codex">
                <supportDesc material="perg">
                  <support>
                    <material>Vellum</material>
                  </support>
                  <extent>
                    <measure type="composition" unit="leaf" quantity="108">108 ff. </measure>
                    <dimensions type="leaf" unit="in">
                      <height>
                        <measure type="height" quantity="6.75" unit="in">6 3/4</measure>
                      </height>
                      <width>
