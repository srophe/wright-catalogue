                    <msContents>
            <textLang mainLang="syr"/>
            <msItem xml:id="a1" n="1">
              <locus to="70 a" from="1"/>
              <title xml:lang="en">A treatise on Natural History, bearing a
                                certain affinity to the "Physiologus" of
                                    <persName>Epiphanius</persName>, and the "Physiologus Syrus,"
                                edited by <bibl>Tychsen (Rostock, 1795)</bibl>, but of much greater
                                extent. </title>
              <rubric xml:lang="syr">
                <locus from="2 b"/>ܬܘܼܒ ܒܝܕ ܐܠܗܐ ܡܪܐܟ݁ܠ
                                ܡܫܲܪܝܢܢ ܕܢ̇ܟܬܘܿܒ ܡ̣ܢܬܐ ܩܲܠܝ̣ܠ ܥܠ ܚܝ̈ܘܬܐ ܕܡܢ ܓܢ̣̈ܣܐ ܡܫܲܚ̈ܠܦܐ ܕܚܝ̈ܘܬܐ
                                ܡܪ̈ܟܒܢ ܘܡܩܝ̈ܡܢ ܠܬ̣ܫܒܘܿܚܬܐ ܕܐܠܗܐ ܒ̇ܪܘܝ̇ܗܝܢ</rubric>
              <finalRubric xml:lang="syr">ܫܠܡ ܒܥܘܕܪܢ ܡܪܢ ܟܬܒܐ ܕܥܠ ܟܝܢ̈ܝܬܐ ܕܚܝ̈ܘܬܐ
                                ܘܕܦܪ̈ܚܬܐ ܘܕܪ̈ܚܫܐ. ܨܠܘ ܥܠ ܕܘܝܐ ܕܟܬ̣ܒ.</finalRubric>
              <note>There are no less than 125 sections. The headings of the first 25
                                may serve as specimens.</note>
              <msItem xml:id="b1" n="2">
                <locus from="2 b"/>
                <title xml:lang="en">of various animals in India</title>
                <rubric xml:lang="syr">ܥܠ ܚܲܝܘܬܐ ܡܫܲܚܠܦܬܐ ܕܐܝ̣ܬ ܒܐܬܪܐ
                                    ܕܗ̣ܢܕܘ</rubric>
              </msItem>
              <msItem xml:id="b2" n="3">
                <locus from="3 a"/>
                <title xml:lang="en">of the sirens (<bibl>Isaiah, ch. xiii.
                                        22, Jeremiah, ch. 1. 30</bibl>) and jackals. </title>
                <rubric xml:lang="syr">ܡܛܠ ܣܝܪ̈ܝܢܘܣ ܘܝܪܘܪ̈ܐ</rubric>
              </msItem>
              <msItem xml:id="b3" n="4">
                <locus from="3 a"/>
                <title xml:lang="en">of the echidna (e%tSm)</title>
                <rubric xml:lang="syr">ܕܥܠ ܐܟܕ̈ܢܐ</rubric>
                <note>Missing Greek</note>
              </msItem>
              <msItem xml:id="b4" n="5">
                <locus from="3 b"/>
                <title xml:lang="en">of a hybrid animal [the name of which is
                                    explained by <bibl>Elias of Nisibis in his Lexidion by خَرانِقُ
                                        (؟فرانق) الأَسَدِ </bibl>, and in <bibl>Add. 7203 by فراس
                                        (؟فرانق) السدَ</bibl>
                </title>
                <rubric xml:lang="syr">ܡܛܠ ܫܘܫ̣ܡܢ ܐܪܝܐ</rubric>
              </msItem>
              <msItem xml:id="b5" n="6">
                <locus from="3 b"/>
                <title xml:lang="en">of the river-horse or
                                    hippopotamus</title>
                <rubric xml:lang="syr">ܣܘܣܝܐ ܕܢܗܪܐ</rubric>
              </msItem>
              <msItem xml:id="b6" n="7">
                <locus from="4 a"/>
                <title xml:lang="en">of apes</title>
                <rubric xml:lang="syr">(ܒܘܙܝܢܗ) ܡܛܠ ܩܘ̈ܦܐ ܕܗ̣ܘ ܒܘܙܢܢܗ̇ </rubric>
              </msItem>
              <msItem xml:id="b7" n="8" defective="true">
                <locus from="4 b"/>
                <title xml:lang="en">of the griffin (%)</title>
                <rubric xml:lang="syr">ܡܛܠ ܐܓܪܘܦܘܣ</rubric>
                <note>Unfinished</note>
                <note>Missing Greek</note>
              </msItem>
              <msItem xml:id="b8" n="9" defective="true">
                <locus from="5 a"/>
                <title xml:lang="en">of sundry beasts and birds</title>
                <rubric xml:lang="syr">ܡܛܠ ܚܝܘ̈ܬܐ ܘܦܪ̈ܚܬܐ ܡܫ̈ܬܚ̣ܠܦܢ</rubric>
                <note>unfinished</note>
              </msItem>
              <msItem xml:id="b9" n="10">
                <locus from="6 a"/>
                <title xml:lang="en">of creatures that are produced without
                                    the act of generation</title>
                <rubric xml:lang="syr">ܡܛܠ ܚܝ̈ܘܬܐ ܕܕܠܐ ܙܘܘܓܐ ܗܘ̈ܝܢ</rubric>
              </msItem>
              <msItem xml:id="b10" n="11">
                <locus from="7 b"/>
                <title xml:lang="en">of the Indian tiger</title>
                <rubric xml:lang="syr">ܡܛܠ ܛܝܓܪܝܣ ܗܢܕܘܝܬܐ</rubric>
              </msItem>
              <msItem xml:id="b11" n="12">
                <locus from="7 b"/>
                <title xml:lang="en">of the Phoenix</title>
                <rubric xml:lang="syr">ܥܠ ܦܘܢܝܟ̣ܣ</rubric>
              </msItem>
              <msItem xml:id="b12" n="13">
                <locus from="8 a"/>
                <title xml:lang="en">of the Indian worm</title>
                <rubric xml:lang="syr">ܡܛܠ ܬܘܠܥܐ ܗܢܕܘܝܬܐ</rubric>
              </msItem>
              <msItem xml:id="b13" n="14">
                <locus from="8 b"/>
                <title xml:lang="en">of an Indian tree, called in Greek
                                    ܐܦܝܕܐܟܣܝܣ (?)</title>
                <rubric xml:lang="syr">ܡܛܠ ܐܝܠ̣ܢܐ. ܐܝܬ ܒܗܢܕܘ ܐܝܠܢܐ ܕܡ̣ܬܩܪܐ ܝܘܢܐܝܬ
                                    ܐܦܝܕܐܟܣܝܣ</rubric>
              </msItem>
              <msItem xml:id="b14" n="15">
                <locus from="8 b"/>
                <title xml:lang="en">of the properties of animals, and first,
                                    of the lion</title>
                <rubric xml:lang="syr">ܡܛܠ ܕܝ̈ܠܝܬܐ ܕܚܝ̈ܘܬܐ. ܩܕܡܐܝܬ ܡܛܠ ܐܪܝܐ</rubric>
              </msItem>
              <msItem xml:id="b15" n="16">
                <locus from="11 a"/>
                <title xml:lang="en">of the leopard</title>
                <rubric xml:lang="syr">ܡܛܠ ܦܐܪܕܝܢ</rubric>
              </msItem>
              <msItem xml:id="b16" n="17">
                <locus from="11 a"/>
                <title xml:lang="en">of the panther</title>
                <rubric xml:lang="syr">ܡܛܠ ܢܡ̣ܪܐ</rubric>
              </msItem>
              <msItem xml:id="b17" n="18">
                <locus from="11 b"/>
                <title xml:lang="en">of the dog</title>
                <rubric xml:lang="syr">ܡܛܠ ܟܠܒܐ</rubric>
              </msItem>
              <msItem xml:id="b18" n="19">
                <locus from="12 b"/>
                <title xml:lang="en">of the ichneumon</title>
                <rubric xml:lang="syr">ܡܛܠ ܐܝܟܢܝܡܘܢ</rubric>
              </msItem>
              <msItem xml:id="b19" n="20">
                <locus from="12 b"/>
                <title xml:lang="en">of the river-dog, a species of
                                    ichneumon</title>
                <rubric xml:lang="syr">ܥܠ ܟܠ̣ܒܐ ܕܡ̈ܝܐ</rubric>
              </msItem>
              <msItem xml:id="b20" n="21">
                <locus from="13 a"/>
                <title xml:lang="en">of the bear</title>
                <rubric xml:lang="syr">ܡܛܠ ܕܒ̣ܐ</rubric>
              </msItem>
              <msItem xml:id="b21" n="22">
                <locus from="13 a"/>
                <title xml:lang="en">of the wolf</title>
                <rubric xml:lang="syr">ܡܛܠ ܕܐܒܐ</rubric>
              </msItem>
              <msItem xml:id="b22" n="23">
                <locus from="13 b"/>
                <title xml:lang="en">of the hyaena</title>
                <rubric xml:lang="syr">ܡܛܠ ܝܕ̈ܢܐ</rubric>
              </msItem>
              <msItem xml:id="b23" n="24" defective="true">
                <locus from="14 a"/>
                <title xml:lang="en">of the weasel</title>
                <rubric xml:lang="syr">ܡܛܠ ܟܟܘܼܫܬܐ</rubric>
                <note>unfinished</note>
              </msItem>
              <msItem xml:id="b24" n="25">
                <locus from="14 a"/>
                <title xml:lang="en">of the stag</title>
                <rubric xml:lang="syr">ܡܛܠ ܐܝ̇ܠܐ</rubric>
              </msItem>
              <msItem xml:id="b25" n="26">
                <locus from="14 b"/>
                <title xml:lang="en">of the elephant</title>
                <rubric xml:lang="syr">ܡܛܠ ܦܝܠܐ</rubric>
              </msItem>
            </msItem>
